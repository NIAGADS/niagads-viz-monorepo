{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "open-access-api-client: server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run open-access-api-client"
        },
        {
            "name": "nextjs-app: client-side (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            // note: configuration will automatically use the +1 port (e.g., :3001) if :3000
            // is in use, so you can deploy multiple microservice-compounds in parallel
            // without manually changing the port
        },
        {
            "name": "nextjs-app: client-side (Firefox)",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:3000",
            "reAttach": true,
            "pathMappings": [
                {
                    "url": "webpack://_N_E",
                    "path": "${workspaceFolder}"
                }
            ],
            // note: configuration will automatically use the +1 port (e.g., :3001) if :3000
            // is in use, so you can deploy multiple microservice-compounds in parallel
            // without manually changing the port
        },
    ],
    "compounds": [
        {
            "name": "open-access-api-client: full stack (Chrome)",
            "configurations": [
                "open-access-api-client: server-side",
                "nextjs-app: client-side (Chrome)"
            ]
        },
        {
            "name": "open-access-api-client: full stack (Firefox)",
            "configurations": [
                "open-access-api-client: server-side",
                "nextjs-app: client-side (Firefox)"
            ]
        }
    ]
}